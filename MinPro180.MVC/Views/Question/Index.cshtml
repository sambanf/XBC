@model IEnumerable<MinPro180.ViewModel.QuestionViewModel>

<div class="panel panel-heading panel-primary">
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <input type="text" class="form-control" id="txt" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-warning btn-src">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->        
        <div class="col-lg-2 col-lg-offset-7">
            <button type="button" class="btn btn-warning btn-new">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div><!-- /.row -->
</div>
<div class="panel panel-body">
    <div class="table-list">
        Hi halo
    </div>
</div>


@* Modal *@
<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create</h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            GetList();
        });

        function GetList(){
            $.ajax({
                url: '@Url.Action("List","Question")',
                type: 'get',
                data: { search: $("#txt").val()},
                success: function (result) {
                    $(".table-list").html(result);
                },
                error: function (err) {
                    $(".table-list").html(err);
                }
            });
        }

        $(".btn-src").click(function () {
        $.ajax({
            url: '@Url.Action("List", "Question")',
            type: 'get',
            data: { search: $("#txt").val()},
            success: function (result) {
                GetList();

            }
            });
        })

                $("#txt").keyup(function () {
        $.ajax({
            url: '@Url.Action("List", "Question")',
            type: 'get',
            data: { search: $("#txt").val()},
            success: function (result) {
                GetList();

            }
            });
        })

        $('.btn-new').click(function () {
            $.ajax({
                url: '@Url.Action("Create","Question")',
                type: 'get',
                success: function (result) {
                    $(".modal-title").html("Create new Question")
                    $(".modal-body").html(result);
                    $(".modal").modal("show")
                },
                error: function (err) {
                    alert(err);
                }
            });

        });
    </script>
}