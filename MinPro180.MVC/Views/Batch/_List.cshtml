@model IEnumerable<MinPro180.ViewModel.BatchViewModel>

<table class="table">
    <tr>
        <td colspan="3">
            <input type="text" class="form-control" id="cari" name="cari" placeholder="Search by Name" />
        </td>
        <td>
            <button type="button" id="btn-new" class="btn btn-success btn-sm">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </button>
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.techname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trainername)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.techname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trainername)
            </td>
            <td>
                <div class="dropdown">
                    <button type="button" class="btn btn-warning dropdown-toggle" id="dropdown-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdown-btn">
                        <li class="li-Edit btn-edit" data-id="@item.id" title="Edit">
                            <a href="#">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </a>
                        </li>
                        <li class="li-Deactivate btn-addpart" data-id="@item.id" title="Add Participant">
                            <a href="#">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>

<script type="text/javascript">
    $("#btn-new").click(function () {
            $.ajax({
                url: '@Url.Action("Create", "Batch")',
                type: 'get',
                success: function (result) {
                $(".modal-title").html("Create New Batch");
                $(".modal-body").html(result);
                $(".modal").modal("show"); //class modal ditampilkan
                },
                error: function (err) {
                alert(err);
                }
            });
    });
    
</script>
